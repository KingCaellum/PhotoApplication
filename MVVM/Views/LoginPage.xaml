<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PhotoApplication.MVVM.ViewModels"
             x:Class="PhotoApplication.MVVM.Views.LoginPage"
             Title="LoginPage">

    <StackLayout Padding="30" VerticalOptions="Center">
        <Entry x:Name="EmailEntry" Placeholder="E-mail" Text="{Binding Email}" />
        <Entry x:Name="PasswordEntry" Placeholder="Wachtwoord" IsPassword="True" Text="{Binding Password}" />
        <Button Text="Inloggen" Command="{Binding LoginCommand}" />
    </StackLayout>

</ContentPage>
